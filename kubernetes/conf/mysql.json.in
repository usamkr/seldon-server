{
    "kind": "List",
    "apiVersion": "v1",
    "metadata": {},
    "items": [
        {
            "kind": "Deployment",
	    "apiVersion": "extensions/v1beta1",
            "metadata": {
                "name": "mysql",
                "labels": {
                    "name": "mysql",
		    "service" : "seldon"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "matchLabels": {
                        "name": "mysql"
                    }
                },
                "template": {
            "metadata": {
                "name": "mysql",
                "labels": {
                    "name": "mysql",
		    "service" : "seldon"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "name": "data-volume",
			"persistentVolumeClaim": {
			    "claimName": "seldon-claim"
			}
                    }
                ],
                "containers": [
                    {
                        "name": "mysql",
                        "image": "seldonio/mysql:%SELDON_MYSQL_IMAGE_VERSION%",
			"imagePullPolicy": "IfNotPresent",
                        "ports": [
                            {
                                "name": "mysql",
                                "containerPort": 3306,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "MYSQL_ROOT_PASSWORD",
                                "value": "mypass"
                            }
                        ],
                        "resources": {
			    %MYSQL_RESOURCES%
				     },
                        "volumeMounts": [
                            {
                                "name": "data-volume",
                                "mountPath": "/seldon-data"
                            }
                        ]
                    }
                ]
            }}}
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "mysql",
                "labels": {
                    "name": "mysql",
		    "service" : "seldon"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 3306,
                        "targetPort": 3306
                    }
                ],
                "selector": {
                    "name": "mysql"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        }
    ]
}
