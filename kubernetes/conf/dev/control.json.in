{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "seldon-control",
        "labels": {
	    "service": "seldon"
        }
    },
    "spec": {
        "volumes": [
            {
                "name": "data-volume",
		"persistentVolumeClaim": {
		    "claimName": "seldon-claim"
		}
            },
            {
                "name": "python-volume",
                "hostPath": {"path": "%SELDON_HOME%/python"}
            }
        ],
        "containers": [
            {
                "name": "seldon-shell",
                "image": "seldonio/seldon-control:%SELDON_CONTROL_IMAGE_VERSION%",
                "command": [
                    "sleep",
                    "infinity"
                ],
                "volumeMounts": [
                    {
                        "name": "data-volume",
                        "mountPath": "/seldon-data"
                    },
                    {
                        "name": "python-volume",
                        "mountPath": "/pyseldon"
                    }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
            }
        ],
	"terminationGracePeriodSeconds": 0
    }
}
